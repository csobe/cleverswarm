{% extends 'base.html.twig' %}

    {% block stylesheets %}

        {{parent()}}

        <!-- Custom CSS -->
        <link href="{{asset('bundles/cleverswarmfrontend/css/modern-business.css')}}" rel="stylesheet">
    {% endblock %}

    {% block body %}

        {% include'CleverSwarmFrontendBundle:Partial:_nav.html.twig' %}

        {% if app.request.get('_route') == 'cleverswarm_frontend_index' %}
            <!-- Header Carousel -->
            {% include'CleverSwarmFrontendBundle:Partial:_carousel_home.html.twig' %}
        {% endif %}
        
        <!-- Page Content -->
        <div class="container">
            
            {% if not (app.request.get('_route') == 'cleverswarm_frontend_index') %}
                <!-- Page Heading/Breadcrumbs -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">{% block h1 %}Titre à définir !{% endblock %}
                            {#<small>Subheading</small>#}
                        </h1>
                        {% include'CleverSwarmFrontendBundle:Partial:_breadcrumb.html.twig' %}
                    </div>
                </div>
                <!-- /.row -->
            {% endif %}

            {% block content %}
            {% endblock %}

            {% include'CleverSwarmFrontendBundle:Partial:_footer.html.twig' %}
            
        </div>
        <!-- /.container -->

    {% endblock %}
{% extends 'base.html.twig' %}

    {% block stylesheets %}

        {{parent()}}

        <!-- Custom CSS -->
        <link href="{{asset('bundles/cleverswarmfrontend/css/modern-business.css')}}" rel="stylesheet">
    {% endblock %}

    {% block body %}

        {% include'CleversWarmFrontendBundle:Partial:_nav.html.twig' %}

        {% if app.request.get('_route') == 'cleverswarm_frontend_index' %}
            <!-- Header Carousel -->
            <header id="myCarousel" class="carousel slide">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <div class="fill" style="background-image:url('http://s.hswstatic.com/gif/ai-arms-race-part-2.jpg');"></div>
                        <div class="carousel-caption">
                            <h2>Caption 1</h2>
                        </div>
                    </div>
                    <div class="item">
                        <div class="fill" style="background-image:url('https://venturesafrica.com/wp-content/uploads/2015/09/RobotTakeOverBS.jpg');"></div>
                        <div class="carousel-caption">
                            <h2>Caption 2</h2>
                        </div>
                    </div>
                    <div class="item">
                        <div class="fill" style="background-image:url('http://future.inese.es/wp-content/uploads/2017/02/robot7.jpg');"></div>
                        <div class="carousel-caption">
                            <h2>Caption 3</h2>
                        </div>
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="icon-prev"></span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="icon-next"></span>
                </a>
            </header>
        {% endif %}
        
        <!-- Page Content -->
        <div class="container">
            
            {% if not (app.request.get('_route') == 'cleverswarm_frontend_index') %}
                <!-- Page Heading/Breadcrumbs -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">{% block h1 %}Titre à définir !{% endblock %}
                            {#<small>Subheading</small>#}
                        </h1>
                        <ol class="breadcrumb">
                            <li><a href="index.html">Home</a>
                            </li>
                            <li class="active">One Column Portfolio</li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
            {% endif %}

            {% block content %}
            {% endblock %}

            {% include'CleversWarmFrontendBundle:Partial:_footer.html.twig' %}
            
        </div>
        <!-- /.container -->

    {% endblock %}
{% extends "CleverSwarmBackendBundle::layout.html.twig" %}


{% block h1 %}{{post.title}} par <small><a href="#">{{post.user}}</a></small>{% endblock %}

{% block content %}

    <!-- Content Row -->
    <div class="row">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Blog Post -->

            <hr>

            <!-- Date/Time -->
            <p><i class="fa fa-clock-o"></i> Posted on August 24, 2013 at 9:00 PM</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-responsive" src="http://placehold.it/900x300" alt="">

            <hr>

            <!-- Post Content -->
            <p class="lead">{{post.content}}</p>

            <hr>

        </div>

        <!-- Blog Sidebar Widgets Column -->
        {{ render(controller("CleverSwarmFrontendBundle:Post:sidebar")) }}

    </div>
    <!-- /.row -->   

    <ul>
        <li>
            <a href="{{ path('cleverswarm_backend_post_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cleverswarm_backend_post_edit', { 'id': post.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
 
{% endblock %}

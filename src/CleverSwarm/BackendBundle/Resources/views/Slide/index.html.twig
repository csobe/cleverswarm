{% extends "CleverSwarmBackendBundle::layout.html.twig" %}

{% block h1 %}Slide index{% endblock %}

{% block content %}

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Caption</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slide in slides %}
            <tr>
                <td><a href="{{ path('cleverswarm_backend_slide_show', { 'id': slide.id }) }}">{{ slide.id }}</a></td>
                <td><a href="{{ path('cleverswarm_backend_slide_show', { 'id': slide.id }) }}">{{ slide.caption }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cleverswarm_backend_slide_show', { 'id': slide.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cleverswarm_backend_slide_edit', { 'id': slide.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cleverswarm_backend_slide_new') }}">Create a new slide</a>
        </li>
    </ul>
{% endblock %}

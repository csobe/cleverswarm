{% extends "CleverSwarmBackendBundle::layout.html.twig" %}

{% block h1 %}Category index{% endblock %}

{% block content %}

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('cleverswarm_backend_category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td><a href="{{ path('cleverswarm_backend_category_show', { 'id': category.id }) }}">{{ category.name }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cleverswarm_backend_category_show', { 'id': category.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cleverswarm_backend_category_edit', { 'id': category.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cleverswarm_backend_category_new') }}">Create a new category</a>
        </li>
    </ul>
{% endblock %}

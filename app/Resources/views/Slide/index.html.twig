{% extends 'base.html.twig' %}

{% block body %}
    <h1>Slides list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Caption</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slide in slides %}
            <tr>
                <td><a href="{{ path('slide_show', { 'id': slide.id }) }}">{{ slide.id }}</a></td>
                <td>{{ slide.caption }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('slide_show', { 'id': slide.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('slide_edit', { 'id': slide.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('slide_new') }}">Create a new slide</a>
        </li>
    </ul>
{% endblock %}
